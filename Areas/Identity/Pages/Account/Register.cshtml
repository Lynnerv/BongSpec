@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/register.css" />
</head>
<body>
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>Formulario de Registro</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <label for="name">Nombre</label>
        <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="Nombre" id="name" />
        <span asp-validation-for="Input.Name" class="text-danger"></span>
        <label for="email">Email</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" id="email" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
        <label for="password">Contraseña</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Contraseña" id="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <label for="confirmPassword">Confirmar Contraseña</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirmar Contraseña" id="confirmPassword" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        <a href="/Account/Login" class="login-link">¿Ya estás registrado? ¡Ir a login!</a>
        <button type="submit">Registrar</button>
    </form>
</body>
</html>